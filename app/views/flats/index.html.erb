<p id="notice"><%= notice %></p>

<h1>ALL OUR FLATS</h1>

    <% @flats.each do |flat| %>

       <div class = "card">
        <div>
        <td><%= flat.name %></td>
        <td><%= flat.address %></td>
        <td><%= flat.number_of_guests %></td>
        <td><%= flat.price_per_night %></td>
        </div>

        <div>
        <td class="btn btn-primary btn-sm"><%= link_to 'Show', flat %></td>
        <td class="btn btn-primary btn-sm"><%= link_to 'Edit', edit_flat_path(flat) %></td>
        <td class="btn btn-secondary btn-sm"><%= link_to 'Destroy', flat, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </div>

        </div>

    <% end %>
<br>

<%= link_to 'New flat', new_flat_path %>
